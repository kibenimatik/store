<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :vendor %>
    <%= f.input :model %>
    <%= f.input :description %>
    <%= f.input :price_in_cents %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
